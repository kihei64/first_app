<h1>Listing shows</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Band</th>
    <th>Venue</th>
    <th>Over21</th>
    <th>Notes</th>
    <th>Contact</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= show.date %></td>
    <td><%= show.band %></td>
    <td><%= show.venue %></td>
    <td><%= show.over21 %></td>
    <td><%= show.notes %></td>
    <td><%= show.contact %></td>
    <td><%= show.phone %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

