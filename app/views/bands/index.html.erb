<h1>Listing bands</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Genre</th>
    <th>Website</th>
    <th>Email</th>
    <th>Rating</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bands.each do |band| %>
  <tr>
    <td><%= band.name %></td>
    <td><%= band.genre %></td>
    <td><%= band.website %></td>
    <td><%= band.email %></td>
    <td><%= band.rating %></td>
    <td><%= band.notes %></td>
    <td><%= link_to 'Show', band %></td>
    <td><%= link_to 'Edit', edit_band_path(band) %></td>
    <td><%= link_to 'Destroy', band, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

